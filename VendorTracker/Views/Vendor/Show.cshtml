@{
    Layout = "_Layout";
}
@using VendorTracker.Models;

<h1>Here are all the orders for @Model["vendor"].Name</h1>
@if(@Model["orders"].Count == 0)
{
    <h5>No orders have been added yet!</h5>
}

<div class="card-container">
@foreach(Order order in @Model["orders"])
{
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@order.Title</h5>
            <p class="card-text">@order.GetDate()</p>
            <p><a href='/vendors/@Model["vendor"].Id/orders/@order.Id' >See order details</a></p>
        </div>
    </div>
}
</div>

<a class="btn btn-info" href='/vendors/@Model["vendor"].Id/orders/new'>Add Order for @Model["vendor"].Name</a>
<a class="btn btn-info" href="/vendors/">Back to Vendor List</a>
<a class="btn btn-danger" href='/vendors/@Model["vendor"].Id/delete'>Delete @Model["vendor"].Name</a>
<a class="btn btn-secondary" href="/">Back Home</a>
