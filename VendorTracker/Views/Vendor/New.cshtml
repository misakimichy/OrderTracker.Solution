@{
    Layout = "_Layout";
}

<h1>Please add a new vendor</h1>
<div class="container">
    <form action="/vendors" method="post">
        <div class="form-group">
            <label for="name">Enter new vendor name:</label>
            <input class="form-control" id="name" name="name" type="text" placeholder="Vendor name..." required>
        </div>
        <div class="form-group">
            <label for="description">Add descripition:</label>
            <textarea class="form-control" id="description" name="description" type="text" placeholder="About the vendor.." rows="5"></textarea>
        </div>
        <a href="/vendors"><button class="btn btn-info submit-buttton" type="submit">Submit</button></a>
    </form>
</div>