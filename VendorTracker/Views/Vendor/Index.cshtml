@{
    Layout = "_Layout";
}
@using VendorTracker.Models;

<h1>Our Vendors</h1>
@if (Model.Count == 0)
{
    <h5>No vendors have been added yet!</h5>
}
else
{
    <div class="card-container">
    @foreach (Vendor vendor in Model)
    {
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@vendor.Name</h5>
                <p class="card-text">@vendor.Description</p>
                <p><a href='/vendors/@vendor.Id' >See order</a></p>
            </div>
        </div>
    }
    </div>
}

<a class="btn btn-info" href="/vendors/new">Add More Vendors</a>
<a class="btn btn-secondary" href="/">Back Home</a>
