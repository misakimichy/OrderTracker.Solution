@{
    Layout = "_Layout";
}
@using VendorTracker.Models;

<h1>Our Vendors</h1>
@if (Model.Count == 0)
{
    <p>There are no vendors added.</p>
}
else
{
    <div class="card-container">
    @foreach (Vendor vendor in Model)
    {
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@vendor.Name</h5>
                <p class="card-text">@vendor.Description</p>
                <p><a href="#" >See order</a></p>
            </div>
        </div>
    }
    </div>
}

<div class="button-container">
    <a class="btn btn-info" href="/vendors/new">Add Vendors</a>
    <a class="btn btn-info" href="/">Back Home</a>
</div>